{
  "compilerOptions": {
  	  "declaration": false,
    "strictNullChecks": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "jsx": "react",
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "noImplicitAny": true,
    "target": "ES5",
    "baseUrl": ".",
    "module": "CommonJS",
    "sourceMap": false,
    "paths": {
      "@/*": ["./src/*"]
    },
    "lib": [
      "dom",
      "ES6",
      "ESNext"
    ],
    "allowSyntheticDefaultImports": true,
    "rootDirs": [
      "/src"
    ],
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "allowJs": true
  },
  "include": [
    "./src"
  ],
  "exclude": [
     
  ]
}


